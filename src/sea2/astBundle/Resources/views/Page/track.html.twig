{% extends 'sea2astBundle::layout.html.twig' %}

{% block page_title %}
    AST - Track
{% endblock %}

{% block page_header %}
    Track
{% endblock %}

{% block page_subheader %}

{% endblock %}

{% block body %}
    <section class="content">

        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="fa fa-arrows-h"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Distance</span>
                        <span class="info-box-number">{{ track.length }}km</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="fa fa-clock-o"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Duration</span>
                        <span class="info-box-number">{{ track.duration }}</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->

            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-6 col-xs-12" style="display: none">
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="fa fa-circle-o"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Durchschnittsgeschwindigkeit</span>
                        <span class="info-box-number">16.8 km/h</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->

            <div class="col-md-3 col-sm-6 col-xs-12" style="display: none">
                <div class="info-box">
                    <span class="info-box-icon bg-yellow"><i class="fa fa-heart"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Kalorien</span>
                        <span class="info-box-number">1067 kcal</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->
        </div><!-- /.row -->



        <!-- AREA CHART -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Area Chart</h3>
            </div>
            <div class="box-body chart-responsive">

                <div id="map" class="map"><noscript><p>Zum Anzeigen der Karte wird Javascript ben&ouml;tigt.</p></noscript></div>
                <div id="map_profiles">
                    <div id="map_hp" class="no_x"><noscript><p>Zum Anzeigen des Profils wird Javascript ben&ouml;tigt.</p></noscript></div>
                    <div id="map_sp" class="no_x"><noscript><p>Zum Anzeigen des Profils wird Javascript ben&ouml;tigt.</p></noscript></div>
                    <div id="map_vp"><noscript><p>Zum Anzeigen des Profils wird Javascript ben&ouml;tigt.</p></noscript></div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->


    </section>
{% endblock %}